{
  "name": "prayertiming",
  "version": "0.0.0-development",
  "description": "A small library to calculate muslim prayer times based on coordinates and timezone",
  "main": "lib/cjs/index.cjs",
  "module": "lib/esm/index.mjs",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "commit": "cz",
    "build": "rimraf lib && tsc && rollup -c rollup.config.js",
    "test": "jest",
    "check:lint": "eslint .",
    "lint": "eslint --fix .",
    "prettier": "prettier --ignore-path .gitignore --ignore-path ./src-tauri/.gitignore \"**/*.+(js|ts|json|jsx|tsx)\"",
    "check:format": "npm run prettier -- --list-different",
    "format": "npm run prettier -- --write",
    "semantic-release": "semantic-release",
    "validate": "npm-run-all --parallel check:* test build"
  },
  "files": [
    "lib/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sh4hids/prayertiming.git"
  },
  "keywords": [
    "Prayer Times",
    "Prayer",
    "Muslim",
    "Islamic"
  ],
  "author": "Shahidul Islam Majumder <hello@shahid.pro>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sh4hids/prayertiming/issues"
  },
  "homepage": "https://github.com/sh4hids/prayertiming#readme",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "del": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-ts": "^3.4.5",
    "semantic-release": "^24.0.0",
    "ts-jest": "^29.1.4",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
